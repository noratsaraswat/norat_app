<% title "User" %>

<p>
  <strong>Login:</strong>
  <%=h @user.login %>
</p>
<p>
  <strong>Name:</strong>
  <%=h @user.name %>
</p>
<p>
  <strong>Email:</strong>
  <%=h @user.email %>
</p>

<p>
  <strong>Avatar:</strong>
  <%= image_tag @user.avatar.url(:thumb) %>
</p>
<p>
  <%= link_to "Edit", edit_user_path(@user) %> 
</p>
